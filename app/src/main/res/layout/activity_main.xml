<android.support.v4.widget.DrawerLayout
    android:id="@+id/drawer_layout"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <ScrollView
            android:id="@+id/scrollView"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:id="@+id/linearLayoutNews"
                android:orientation="vertical"
                android:background="@color/articleBackground"
                android:padding="16dp"
                android:paddingBottom="16dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:visibility="invisible">

                <TextView
                    android:id="@+id/textViewNews"
                    android:padding="8dp"
                    android:layout_marginBottom="8dp"
                    android:background="@color/colorPrimary"
                    android:layout_width="match_parent"
                    android:textSize="20sp"
                    android:layout_height="wrap_content" />

                <TextView
                    android:id="@+id/article1"
                    android:padding="8dp"
                    android:layout_marginBottom="8dp"
                    android:background="@color/colorPrimary"
                    android:layout_width="match_parent"
                    android:textSize="16sp"
                    android:layout_height="wrap_content" />

                <TextView
                    android:id="@+id/article2"
                    android:background="@color/colorPrimary"
                    android:padding="8dp"
                    android:layout_marginBottom="8dp"
                    android:layout_width="match_parent"
                    android:textSize="16sp"
                    android:layout_height="wrap_content" />

                <TextView
                    android:id="@+id/article3"
                    android:background="@color/colorPrimary"
                    android:padding="8dp"
                    android:layout_marginBottom="8dp"
                    android:layout_width="match_parent"
                    android:textSize="16sp"
                    android:layout_height="wrap_content" />

                <TextView
                    android:id="@+id/article4"
                    android:background="@color/colorPrimary"
                    android:padding="8dp"
                    android:layout_marginBottom="8dp"
                    android:layout_width="match_parent"
                    android:textSize="16sp"
                    android:layout_height="wrap_content" />

                <TextView
                    android:id="@+id/article5"
                    android:padding="8dp"
                    android:layout_marginBottom="8dp"
                    android:background="@color/colorPrimary"
                    android:layout_width="match_parent"
                    android:textSize="16sp"
                    android:layout_height="wrap_content" />

                <TextView
                    android:id="@+id/article6"
                    android:background="@color/colorPrimary"
                    android:padding="8dp"
                    android:layout_marginBottom="8dp"
                    android:layout_width="match_parent"
                    android:textSize="16sp"
                    android:layout_height="wrap_content" />

                <TextView
                    android:id="@+id/article7"
                    android:padding="8dp"
                    android:layout_marginBottom="8dp"
                    android:background="@color/colorPrimary"
                    android:layout_width="match_parent"
                    android:textSize="16sp"
                    android:layout_height="wrap_content" />

                <TextView
                    android:id="@+id/article8"
                    android:padding="8dp"
                    android:layout_marginBottom="8dp"
                    android:background="@color/colorPrimary"
                    android:layout_width="match_parent"
                    android:textSize="16sp"
                    android:layout_height="wrap_content" />

                <TextView
                    android:id="@+id/article9"
                    android:padding="8dp"
                    android:layout_marginBottom="8dp"
                    android:background="@color/colorPrimary"
                    android:layout_width="match_parent"
                    android:textSize="16sp"
                    android:layout_height="wrap_content" />

                <TextView
                    android:id="@+id/article10"
                    android:padding="8dp"
                    android:layout_marginBottom="8dp"
                    android:background="@color/colorPrimary"
                    android:layout_width="match_parent"
                    android:textSize="16sp"
                    android:layout_height="wrap_content" />


            </LinearLayout>
        </ScrollView>

    </LinearLayout>

</android.support.v4.widget.DrawerLayout>